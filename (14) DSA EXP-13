#include <stdio.h>

void selectionSort(int a[], int n) {
    int i, j, min, temp;
    for (i = 0; i < n - 1; i++) {
        min = i;
        for (j = i + 1; j < n; j++)
            if (a[j] < a[min])
                min = j;
        temp = a[i];
        a[i] = a[min];
        a[min] = temp;
    }
}

void bubbleSort(int a[], int n) {
    int i, j, temp;
    for (i = 0; i < n - 1; i++)
        for (j = 0; j < n - i - 1; j++)
            if (a[j] > a[j + 1]) {
                temp = a[j];
                a[j] = a[j + 1];
                a[j + 1] = temp;
            }
}

void insertionSort(int a[], int n) {
    int i, j, key;
    for (i = 1; i < n; i++) {
        key = a[i];
        j = i - 1;
        while (j >= 0 && a[j] > key) {
            a[j + 1] = a[j];
            j--;
        }
        a[j + 1] = key;
    }
}

void display(int a[], int n) {
    for (int i = 0; i < n; i++)
        printf("%d ", a[i]);
    printf("\n");
}

int main() {
    int a[100], n, choice;
    printf("Enter number of elements: ");
    scanf("%d", &n);
    printf("Enter elements: ");
    for (int i = 0; i < n; i++)
        scanf("%d", &a[i]);
    while (1) {
        printf("\n1.Selection Sort\n2.Bubble Sort\n3.Insertion Sort\n4.Exit\nEnter choice: ");
        scanf("%d", &choice);
        switch (choice) {
        case 1:
            selectionSort(a, n);
            printf("After Selection Sort: ");
            display(a, n);
            break;
        case 2:
            bubbleSort(a, n);
            printf("After Bubble Sort: ");
            display(a, n);
            break;
        case 3:
            insertionSort(a, n);
            printf("After Insertion Sort: ");
            display(a, n);
            break;
        case 4:
            return 0;
        default:
            printf("Invalid choice\n");
        }
    }
}
